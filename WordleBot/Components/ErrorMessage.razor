<div class="error-message">
    @if (ErrorMessages?.Count > 0)
    {
        <Blazorise.ListGroup>
        @foreach(var errorMessage in ErrorMessages)
        {
           <Blazorise.ListGroupItem Name="danger" Color="Color.Danger">
              @errorMessage
          </Blazorise.ListGroupItem>
        }
        </Blazorise.ListGroup>     
    }
</div>

@code {
    [Parameter]
    public List<string> ErrorMessages { get; set; } = new List<string>() { "Test Error" };
}
